<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.std.gym.dao.IOrgCourseOrderDAO">
	<resultMap id="orgCourseOrder_DB_Result" type="orgCourseOrder">
		<result column="code" property="code" />
		<result column="org_course_code" property="orgCourseCode" />
		<result column="org_course_name" property="orgCourseName" />
		<result column="quantity" property="quantity" />
		<result column="price" property="price" />
		<result column="amount" property="amount" />
		<result column="status" property="status" />
		<result column="pay_type" property="payType" />
		<result column="pay_code" property="payCode" />
		<result column="pay_group" property="payGroup" />
		<result column="pay_amount" property="payAmount" />
		<result column="pay_datetime" property="payDatetime" />
		<result column="apply_user" property="applyUser" />
		<result column="mobile" property="mobile" />
		<result column="apply_datetime" property="applyDatetime" />
		<result column="apply_note" property="applyNote" />
		<result column="updater" property="updater" />
		<result column="update_datetime" property="updateDatetime" />
		<result column="remark" property="remark" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
		</trim>
	</sql>
	<select id="select_orgCourseOrder" parameterType="orgCourseOrder" resultMap="orgCourseOrder_DB_Result">
		SELECT
		t.code
		,t.org_course_code
		,t.org_course_name
		,t.quantity
		,t.price
		,t.amount
		,t.status
		,t.pay_type
		,t.pay_code
		,t.pay_group
		,t.pay_amount
		,t.pay_datetime
		,t.apply_user
		,t.mobile
		,t.apply_datetime
		,t.apply_note
		,t.updater
		,t.update_datetime
		,t.remark
		FROM
		tgym_org_course_order t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_orgCourseOrder_count" parameterType="orgCourseOrder"
		resultType="java.lang.Long">
		SELECT count(1) FROM tgym_org_course_order t
		<include refid="where_condition" />
	</select>

	<insert id="insert_orgCourseOrder" parameterType="orgCourseOrder">
		INSERT INTO
		tgym_org_course_order(
		code
		,org_course_code
		,org_course_name
		,quantity
		,price
		,amount
		,status
		,pay_type
		,pay_code
		,pay_group
		,pay_amount
		,pay_datetime
		,apply_user
		,mobile
		,apply_datetime
		,apply_note
		,updater
		,update_datetime
		,remark
		)
		VALUES(
		#{code}
		,#{orgCourseCode}
		,#{orgCourseName}
		,#{quantity}
		,#{price}
		,#{amount}
		,#{status}
		,#{payType}
		,#{payCode}
		,#{payGroup}
		,#{payAmount}
		,#{payDatetime}
		,#{applyUser}
		,#{mobile}
		,#{applyDatetime}
		,#{applyNote}
		,#{updater}
		,#{updateDatetime}
		,#{remark}
		)
	</insert>

	<update id="update_orgCourseOrder" parameterType="orgCourseOrder">
		UPDATE tgym_org_course_order
		SET
		org_course_code = #{orgCourseCode}
		,org_course_name = #{orgCourseName}
		,quantity = #{quantity}
		,price = #{price}
		,amount = #{amount}
		,status = #{status}
		,pay_type = #{payType}
		,pay_code = #{payCode}
		,pay_group = #{payGroup}
		,pay_amount = #{payAmount}
		,pay_datetime = #{payDatetime}
		,apply_user = #{applyUser}
		,mobile = #{mobile}
		,apply_datetime = #{applyDatetime}
		,apply_note = #{applyNote}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>


</mapper>